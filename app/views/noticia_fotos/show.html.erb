<%- model_class = NoticiaFoto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @noticia_foto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @noticia_foto.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Noticia_id) %>:</strong></dt>
  <dd><%= @noticia_foto.Noticia_id %></dd>
  <td><%= image_tag @noticia_foto.foto.url(:pequena), size: "160x120"%></td>  
  <dd><%= @noticia_foto.foto_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              noticia_fotos_path, :class => 'btn btn-default'  %>
<%if(@acesso.politica.editar)%> 
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_noticia_foto_path(@noticia_foto), :class => 'btn btn-default' %>
<%end%>
<%if(@acesso.politica.excluir)%>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              noticia_foto_path(@noticia_foto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%end%>
