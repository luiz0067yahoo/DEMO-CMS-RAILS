<%= form_for @usuario, :html => { :class => "form-horizontal usuario" } do |f| %>
  <div class="form-group <%=f.errors_on?(:nome)?" has-error":"" %>" >
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control input-lg' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group <%=f.errors_on?(:nome)?" has-error":"" %>" >
    <%= f.label :login, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :login, :class => 'form-control input-lg' %>
    </div>
    <%=f.error_span(:login) %>
  </div>
  <div class="form-group <%=f.errors_on?(:senha)?" has-error":"" %>">
    <%= f.label :senha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field  :senha, :class => 'form-control input-lg' %>
    </div>
    <%=f.error_span(:senha) %>
  </div>
    <div class="form-group <%=f.errors_on?(:senha)?" has-error":"" %>">
    <label class="control-label col-lg-2" for="repetir_senha">Repetir Senha</label>
    <div class="col-lg-10">
	  <%= f.password_field  :senha_confirmation, :class => 'form-control input-lg' %>
    </div>
	<%=f.error_span(:senha_confirmation) %>
  </div>
  <div class="form-group <%=f.errors_on?(:email)?" has-error":"" %>" >
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control input-lg' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
 <div class="form-group <%=f.errors_on?(:foto)?" has-error":"" %>" >
    <%= f.label :foto, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :foto, :class => 'form-control input-lg' %>
    </div>
    <%=f.error_span(:foto) %>
  </div>  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
	  <%if(@acesso.politica.salvar)%>
      <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%end%>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn btn-default' %>
    </div>
  </div>
  <% if @usuario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@usuario.errors.count, "Erros") %> impediram do <%=Usuario.model_name.human.titleize %> ser salvo</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @usuario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<% end %>
