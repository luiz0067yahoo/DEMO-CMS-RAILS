<%- model_class = GaleriaFoto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @galeria_foto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @galeria_foto.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Menu_id) %>:</strong></dt>
  <dd><%= Menu.where("id=0"+@galeria_foto.Menu_id.to_s).first.try(:nome)   %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto) %>:</strong></dt>
  <dd><%= image_tag @galeria_foto.foto.url(:pequena), size: "160x120"%></dd>
</dl>
<%= link_to t('.back', :default => t("helpers.links.back")),
              galeria_fotos_path, :class => 'btn btn-default'  %>
<%if(@acesso.politica.editar)%>	
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_galeria_foto_path(@galeria_foto), :class => 'btn btn-default' %>
<%end%>			  
<%if(@acesso.politica.excluir)%>	
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              galeria_foto_path(@galeria_foto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%end%>			  
