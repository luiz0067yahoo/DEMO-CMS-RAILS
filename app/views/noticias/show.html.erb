<%- model_class = Noticia -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
  <dd><%= @noticia.titulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtitulo) %>:</strong></dt>
  <dd><%= @noticia.subtitulo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fonte) %>:</strong></dt>
  <dd><%= @noticia.fonte %></dd>
  <dt><strong><%= model_class.human_attribute_name(:conteudo) %>:</strong></dt>
  <dd><%= @noticia.conteudo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ocultar) %>:</strong></dt>
  <dd><%= @noticia.ocultar %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Menu_id) %>:</strong></dt>
  <dd><%= @noticia.Menu_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto) %>:</strong></dt>
  <dd><%= image_tag @noticia.foto.url(:pequena), size: "160x120"%></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              noticias_path, :class => 'btn btn-default'  %>
<%if(@acesso.politica.editar)%>				  
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_noticia_path(@noticia), :class => 'btn btn-default' %>
<%end%>
<%if(@acesso.politica.excluir)%>				  
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              noticia_path(@noticia),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%end%>			  
